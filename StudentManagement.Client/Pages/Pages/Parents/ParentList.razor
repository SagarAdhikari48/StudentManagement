@page "/parents-list"
@using StudentManagement_Shared.Models
@inject NavigationManager navigation;

<div class="container">
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Parents List</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <p><a class="btn btn-success float-end" href="/add-parent"> Add New Parent </a></p>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header"></div>
                            @if (!AllParents.Any())
                            {
                                <p><em>Loading Parents...</em></p>
                            }
                            @if (AllParents.Any())
                            {
                                <div class="card-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>FirstName</th>
                                            <th>MiddleName</th>
                                            <th>LastName</th>
                                            <th>Email</th>
                                            <th>PhoneNo</th>
                                            <th>Country</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var parent in AllParents)
                                        {
                                            <tr>
                                                <td>@parent.Id</td>
                                                <td>@parent.FirstName</td>
                                                <td>@parent.MiddleName</td>
                                                <td>@parent.LastName</td>
                                                <td>@parent.EmailAddress</td>
                                                <td>@parent.PhoneNumber</td>
                                                <td>Country</td>
                                                <td>
                                                    <a class="btn btn-success" href="/parent/edit/@parent.Id"> Edit </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger" href="/parent/delete/@parent.Id"> Delete </a>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info"> There is not Parents List Availlable</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@code {
    public List<Parent> AllParents { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAllParents();
    }

    public async Task LoadAllParents()
    {
        var data = await ParentService.GetAllAsync();
        AllParents.Clear();
        if(data is null) return;
        foreach (var parent in data)
        {
            AllParents.Add(parent);
        }
    }

    private void EditParents(int id)
    {
        navigation.NavigateTo($"/parent/edit/{id}");
    }

    private async Task DeleteParent(int id)
    {
        var result = await ParentService.DeleteAsync(id);
        await LoadAllParents();
    }
}