@page "/system-code-detail-list"
@using StudentManagement_Shared.Models
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">System Code Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <p><a class="btn btn-success float-end" href="/add-system-code-detail">Add New System Code Details</a></p>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header"></div>
                            @if (!AllSystemCodesDetails.Any())
                            {
                            <p><em>Loading System Codes Details...</em></p>
                            }
                            @if (AllSystemCodesDetails.Any())
                            {
                            <div class="card-body">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>System Code</th>
                                        <th>Edit</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var systemCode in AllSystemCodesDetails)
                                    {
                                    <tr>
                                        <td>@systemCode.Id</td>
                                        <td>@systemCode.Code</td>
                                        <td>@systemCode.Description</td>
                                        <td>@systemCode?.SystemCode?.Id</td>
                                        <td>
                                            <a class="btn btn-success" href="/add-system-code-detail"> Edit </a>
                                        </td>
                                    </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                            }
                            else
                            {
                            <div class="alert alert-info"> There is no System Codes Details List Availlable</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public List<SystemCodeDetail> AllSystemCodesDetails { get; set; } = new();


    public SystemCodeDetail systemcodedetails = new SystemCodeDetail();

    protected override async Task OnInitializedAsync()
    {
        await LoadAllSystemCodesDetails();
    }
    public async Task LoadAllSystemCodesDetails()
    {
        var systemcodes = await SystemCodeDetailService.GetAllAsync();

        if (systemcodes is null) return;

        AllSystemCodesDetails.Clear();

        AllSystemCodesDetails.AddRange(systemcodes);

    }
}