@page "/system-code-list"
@using StudentManagement_Shared.Models
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">System Code List</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <p><a class="btn btn-success float-end" href="/add-system-code">Add New System Codes</a></p>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header"></div>
                            @if (!SystemCodes.Any())
                            {
                            <p><em>Loading System Codes...</em></p>
                            }
                            @if (SystemCodes.Any())
                            {
                            <div class="card-body">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th> Code</th>
                                        <th>Description</th>
                                        <th>Edit</th>
                                        @* <th>Delete</th> *@
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var systemCode in SystemCodes)
                                    {
                                    <tr>
                                        <td>@systemCode.Id</td>
                                        <td>@systemCode.Code</td>
                                        <td>@systemCode.Description</td>
                                        <td>
                                            <a class="btn btn-success" href="/edit-system-code/edit/@systemCode.Id"> Edit </a>
                                        </td>
                                        @* <td> *@
                                        @*     <a class="btn btn-danger" href="/delet-system-code/delete/@systemCode.Id"> Delete </a> *@
                                        @* </td> *@
                                    </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                            }
                            else
                            {
                            <div class="alert alert-info"> There is no System Code List Availlable</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public List<SystemCode> SystemCodes { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAllSystemCodeAsync();
    }

    public async Task LoadAllSystemCodeAsync()
    {
        var systemCodes = await SystemCodeService.GetAllSystemCodeAsync();
        SystemCodes.Clear();
        if (systemCodes == null) return;
        foreach (var systemCode in systemCodes)
        {
            SystemCodes.Add(systemCode);
        }
    }
    
    

}